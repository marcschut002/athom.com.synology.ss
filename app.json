{
  "id": "com.synology.ss",
  "version": "3.0.1",
  "compatibility": ">=4.1.0",
  "sdk": 2,
  "name": {
    "en": "Surveillance Station 2"
  },
  "brandColor": "#333333",
  "description": {
    "en": "Adds support for camera's available in Synology Surveillance Station",
    "nl": "Ondersteund Synology Surveillance Station camera's"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "marcschut"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/marcschut002/athom.com.synology.ss/issues"
  },
  "source": "https://github.com/marcschut002/athom.com.synology.ss",
  "homepage": "https://github.com/marcschut002/athom.com.synology.ss",
  "homeyCommunityTopicId": 32737,
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Marc Schut",
    "email": "marcschut@icloud.com"
  },
  "capabilities": {
    "home_mode": {
      "type": "boolean",
      "title": {
        "nl": "Home Mode",
        "en": "Home Mode"
      },
      "getable": true,
      "setable": true,
      "insights": true,
      "insightsTitleTrue": {
        "en": "Enter Home Mode",
        "nl": "Home Mode Openen"
      },
      "insightsTitleFalse": {
        "en": "Leave Home Mode",
        "nl": "Home Mode Verlaten"
      }
    }
  },
  "drivers": [
    {
      "id": "camera",
      "name": {
        "en": "Camera"
      },
      "class": "sensor",
      "images": {
        "large": "/drivers/camera/assets/images/large.png",
        "small": "/drivers/camera/assets/images/small.png"
      },
      "capabilities": [],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Motion Detection"
          },
          "children": [
            {
              "id": "motion_detection",
              "type": "checkbox",
              "label": {
                "en": "Active",
                "nl": "Actief"
              },
              "hint": {
                "en": "The user needs to be a member of the administrator group for this setting to work properly.",
                "nl": "De gebruiker moet lid zijn van de administrator groep om deze optie te kunnen activeren."
              },
              "value": false
            },
            {
              "id": "motion_timeout",
              "type": "number",
              "label": {
                "en": "Timeout",
                "nl": "Time-out"
              },
              "units" : {
                "en": "Seconds",
                "nl": "Seconde"
              },
              "hint": {
                "en": "Timeout should be at least 10 seconds. To little could mean the camera could trigger to much motion events.",
                "nl": "Time-out moet minimaal 10 seconde zijn. Een te lage instelling kan er voor zorgen dat de camera te veel beweging detecteert."
              },
              "value": 21
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "station"
        },
        {
          "id": "nostation"
        },
        {
          "id": "motion"
        },
        {
          "id": "done",
          "template": "done"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "repair": [
        {
          "id": "station"
        },
        {
          "id": "nostation"
        },
        {
          "id": "done",
          "template": "done"
        }
      ]
    },
    {
      "id": "station",
      "name": {
        "en": "Surveillance Station"
      },
      "class": "other",
      "images": {
        "large": "/drivers/station/assets/images/large.png",
        "small": "/drivers/station/assets/images/small.png"
      },
      "capabilities": ["home_mode"],
      "settings": [],
      "pair": [
        {
          "id": "api"
        },
        {
          "id": "2fa"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "repair": [
        {
          "id": "api"
        },
        {
          "id": "2fa"
        },
        {
          "id": "done",
          "template": "done"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "home_mode_on",
        "title": {
          "en": "Home Mode Enabled",
          "nl": "Home Mode Ingeschakeld"
        },
        "args": [
          {
            "name": "station",
            "type": "device",
            "filter": "driver_id=station"
          }
        ]
      },
      {
        "id": "home_mode_off",
        "title": {
          "en": "Home Mode Disabled",
          "nl": "Home Mode Uitgeschakeld"
        },
        "args": [
          {
            "name": "station",
            "type": "device",
            "filter": "driver_id=station"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "update_image",
        "title": {
          "en": "Update camera image",
          "nl": "Update camera afbeelding"
        },
        "args": [
          {
            "name": "camera",
            "type": "device",
            "filter": "driver_id=camera"
          }
        ]
      },
      {
        "id": "home_mode_on",
        "title": {
          "en": "Home Mode Enabled",
          "nl": "Home Mode Ingeschakeld"
        },
        "args": [
          {
            "name": "station",
            "type": "device",
            "filter": "driver_id=station"
          }
        ]
      },
      {
        "id": "home_mode_off",
        "title": {
          "en": "Home Mode Disabled",
          "nl": "Home Mode Uitgeschakeld"
        },
        "args": [
          {
            "name": "station",
            "type": "device",
            "filter": "driver_id=station"
          }
        ]
      },
      {
        "id": "ext_record_start",
        "title": {
          "en": "Start Recording",
          "nl": "Start Opname"
        },
        "args": [
          {
            "name": "camera",
            "type": "device",
            "filter": "driver_id=camera"
          }
        ]
      },
      {
        "id": "ext_record_stop",
        "title": {
          "en": "Stop Recording",
          "nl": "Stop Opname"
        },
        "args": [
          {
            "name": "camera",
            "type": "device",
            "filter": "driver_id=camera"
          }
        ]
      }
    ]
  }
}
